<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Smash Quiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Thêm jQuery nếu chưa có -->
    @RenderSection("Scripts", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/game-theme.css" rel="stylesheet" />
</head>
<body>
    <!-- Top Right Icons (Header mới) -->
    <div class="top-right-nav">
        <!-- Nút Cài đặt -->
        <a href="#" class="nav-icon-btn">
            <i class="fa-solid fa-gear"></i>
        </a>
        <!-- Nút Hồ sơ -->
        <a href="#" class="nav-icon-btn">
            <i class="fa-solid fa-user"></i>
        </a>
        <!-- Nút Đăng xuất (Màu đỏ) -->
        <a href="#" class="nav-icon-btn" style="background: #fa5252; border-bottom-color: #c92a2a;">
            <i class="fa-solid fa-right-from-bracket"></i>
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>