@model WEBB.Models.User.LoginRequest

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng nhập IQuiz";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-logo">IQ</div>

        <h2 class="auth-title">Đăng nhập IQuiz</h2>
        <p class="auth-subtitle">
            Chào mừng bạn quay lại, hãy đăng nhập để tiếp tục.
        </p>

        @* Thông báo đăng ký thành công từ TempData *@
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="alert alert-success">
                @TempData["RegisterSuccess"]
            </div>
        }

        @* Thông báo lỗi đăng nhập *@
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Model.ErrorMessage
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, "Tên đăng nhập")
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control auth-input", placeholder = "Nhập tên đăng nhập..." })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Mật khẩu")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control auth-input", placeholder = "Nhập mật khẩu..." })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>

            <div class="form-group d-flex align-items-center justify-content-between mt-2 mb-3">
                <div>
                    <input type="checkbox" id="rememberMe" />
                    <label for="rememberMe">Ghi nhớ đăng nhập</label>
                </div>
                <a href="#" class="auth-link">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-primary auth-btn">
                Đăng nhập
            </button>

            <p class="mt-3 text-center">
                Chưa có tài khoản?
                <a href="@Url.Action("Register", "Account")" class="auth-link">
                    Đăng ký ngay
                </a>
            </p>
        }
    </div>
</div>

@section Styles {
    <style>
        .auth-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 24px;
        }

        .auth-card {
            background: #ffffff;
            border-radius: 24px;
            padding: 32px 40px;
            width: 420px;
            max-width: 100%;
            box-shadow: 0 24px 60px rgba(15, 23, 42, 0.3);
        }

        .auth-logo {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: #eef2ff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 20px;
            margin: 0 auto 16px;
            color: #4f46e5;
        }

        .auth-title {
            text-align: center;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .auth-subtitle {
            text-align: center;
            color: #6b7280;
            margin-bottom: 20px;
        }

        .auth-input {
            border-radius: 999px;
            padding-left: 16px;
            padding-right: 16px;
        }

        .auth-btn {
            width: 100%;
            border-radius: 999px;
            padding: 10px 0;
            font-weight: 600;
        }

        .auth-link {
            color: #4f46e5;
            text-decoration: none;
        }

            .auth-link:hover {
                text-decoration: underline;
            }

        .form-group {
            margin-bottom: 12px;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
